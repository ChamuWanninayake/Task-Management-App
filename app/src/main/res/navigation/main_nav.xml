<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/goalList">

    <fragment
        android:id="@+id/goalList"
        android:name="com.example.goaltrackingapplication.ui.fragments.goalslist.GoalList"
        android:label="Goals"
        tools:layout="@layout/fragment_goal_list" >
        <action
            android:id="@+id/action_goalList_to_createGoals"
            app:destination="@id/createGoals" />
        <action
            android:id="@+id/action_goalList_to_updateGoals"
            app:destination="@id/updateGoals" />
    </fragment>
    <fragment
        android:id="@+id/createGoals"
        android:name="com.example.goaltrackingapplication.ui.fragments.creategoals.CreateGoals"
        android:label="Create Goals"
        tools:layout="@layout/fragment_create_goals" >
        <action
            android:id="@+id/action_createGoals_to_goalList"
            app:destination="@id/goalList" />
    </fragment>
    <fragment
        android:id="@+id/updateGoals"
        android:name="com.example.goaltrackingapplication.ui.fragments.updategoals.UpdateGoals"
        android:label="Update Goals"
        tools:layout="@layout/fragment_update_goals" >
        <action
            android:id="@+id/action_updateGoals_to_goalList"
            app:destination="@id/goalList" />
    </fragment>
</navigation>